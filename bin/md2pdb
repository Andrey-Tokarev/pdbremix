#!/usr/bin/env python

__doc__ = """
Looks for topology and restart files with name <md> and
generates a PDB f0r it.

Usage: md2pdb <md>
"""

import os
import shutil
import time
import random

from pdbremix import util
from pdbremix import simulate
from pdbremix import force
from pdbremix.docopt import docopt


def relpath(path):
  if path == '':
    return ''
  dirpath, basename = os.path.split(path)
  dirpath = os.path.relpath(dirpath, os.getcwd())
  if dirpath == '' or dirpath == '.':
    return basename
  return os.path.join(dirpath, basename)


if __name__ == "__main__":
  arg = docopt(__doc__)
  md = arg['<md>']
  pdb = md + '.pdb'
  top, crds, vels = simulate.get_restart_files(md)
  top = relpath(top)
  crds = relpath(crds)
  vels = relpath(vels)
  simulate.convert_restart_to_pdb(md, pdb)
  print "restart-files:", top, crds, vels 
  print "generated:", pdb