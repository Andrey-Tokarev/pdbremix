#!/usr/bin/env python

__doc__ = """
Calculates basic properties CARMSD & KIN of MD trajectories

Usage: trajvar [options] <md> ...

Options:
-r <refpdb>  Reference PDB for RMSD calculations, if not given,
             first frame is used
"""

import os
from pdbremix.docopt import docopt
from pdbremix import traj

if __name__ == "__main__":
  arg = docopt(__doc__)
  ref_pdb = arg['-r']
  for md in arg['<md>']:
    traj.process_md(md, ref_pdb)
        

